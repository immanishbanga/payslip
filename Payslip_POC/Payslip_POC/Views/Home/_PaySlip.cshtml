@model Common.Payslip

<div class="col-lg-12" style="border:1px blue solid;padding:10px;">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <center><h2 style="color: steelblue">Payslip</h2></center>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.PayPeriod, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.PayPeriod, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.GrossIncome, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.GrossIncome, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.IncomeTax, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.IncomeTax, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.NetIncome, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.NetIncome, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="padding-bottom: 25px;">
            @Html.LabelFor(m => m.SuperAmount, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.SuperAmount, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>
