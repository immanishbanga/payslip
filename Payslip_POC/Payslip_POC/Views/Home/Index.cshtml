@model Common.Employee
@using (Ajax.BeginForm("PaySlip", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divPayslip", InsertionMode = InsertionMode.Replace }))
{
    <center><h2 style="color: steelblue">Employee payslip for a flexible pay cycle</h2></center>
    <div class="col-lg-12" style="border:1px blue solid;padding:10px;">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="form-group" style="padding-bottom: 25px;">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 25px;">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 25px;">
                @Html.LabelFor(m => m.AnnualSalary, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.AnnualSalary, new { @class = "form-control num" })
                    @Html.ValidationMessageFor(m => m.AnnualSalary)
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 25px;">
                @Html.LabelFor(m => m.SuperRate, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.SuperRate, new { @class = "form-control num", maxlength=2 })
                    @Html.ValidationMessageFor(m => m.SuperRate)
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 25px;">
                @Html.LabelFor(m => m.PaymentStartDate, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PaymentStartDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PaymentStartDate)
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 25px;">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <div style="clear:both"></div><br />
    <div id="divPayslip">

    </div>

}
@section scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
}
